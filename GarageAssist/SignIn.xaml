<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GarageAssist.SignIn">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="dotnet_bot.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a race car number eight" />

            <Label Text="Sign In" Style="{StaticResource Headline}"/>

            <Label Text="Sign into your MyQ account below." />
            
            <Entry x:Name="Email" Placeholder="Email"/>
            
            <Entry x:Name="Password" Placeholder="Password" IsPassword="True"/>
            
            <Button
                x:Name="TestBtn"
                Text="Sign in" 
                SemanticProperties.Hint="Counts the number of times you click"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
